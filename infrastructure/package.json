{
  "name": "wha-client-infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:staging": "cdk deploy --context environment=staging",
    "deploy:prod": "cdk deploy --context environment=prod",
    "deploy:cert:staging": "cdk deploy --app \"npx ts-node bin/certificate.ts\" --context environment=staging",
    "deploy:cert:prod": "cdk deploy --app \"npx ts-node bin/certificate.ts\" --context environment=prod",
    "diff:staging": "cdk diff --context environment=staging",
    "diff:prod": "cdk diff --context environment=prod",
    "diff:cert:staging": "cdk diff --app \"npx ts-node bin/certificate.ts\" --context environment=staging",
    "diff:cert:prod": "cdk diff --app \"npx ts-node bin/certificate.ts\" --context environment=prod",
    "synth:staging": "cdk synth --context environment=staging",
    "synth:prod": "cdk synth --context environment=prod"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "20.1.7",
    "jest": "^29.4.3",
    "ts-jest": "^29.1.0",
    "aws-cdk": "2.100.0",
    "typescript": "~5.0.4"
  },
  "dependencies": {
    "aws-cdk-lib": "2.100.0",
    "constructs": "^10.0.0"
  }
}
